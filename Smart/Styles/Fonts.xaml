<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Smart"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="SegoeUIRegular">pack://application;,,,/Fonts/#Segoe UI</FontFamily>
    <FontFamily x:Key="SegoeUIItalic">pack://application;,,,/Fonts/#Segoe UI Italic</FontFamily>

    <FontFamily x:Key="SegoeUISemibold">pack://application;,,,/Fonts/#Segoe UI Semibold</FontFamily>
    <FontFamily x:Key="SegoeUISemiboldItalic">pack://application;,,,/Fonts/#Segoe UI Semibold Italic</FontFamily>
    
    <FontFamily x:Key="SegoeUILight">pack://application;,,,/Fonts/#Segoe UI Light</FontFamily>
    <FontFamily x:Key="SegoeUILightItalic">pack://application;,,,/Fonts/#Segoe UI Light Italic</FontFamily>
        
    <FontFamily x:Key="SegoeUISemiLight">pack://application;,,,/Fonts/#Segoe UI Semilight</FontFamily>
    <FontFamily x:Key="SegoeUISemiLightItalic">pack://application;,,,/Fonts/#Segoe UI Semilight Italic</FontFamily>

    <FontFamily x:Key="FA5Regular">pack://application;,,,/Fonts/#Font Awesome 5 Free Regular</FontFamily>
    <FontFamily x:Key="FA5BrandsRegular">pack://application;,,,/Fonts/#Font Awesome 5 Brands Regular</FontFamily>
    <FontFamily x:Key="FA5Solid">pack://application;,,,/Fonts/#Font Awesome 5 Free Solid</FontFamily>
    <FontFamily x:Key="FA4Regular">pack://application;,,,/Fonts/#FontAwesome</FontFamily>

    <FontFamily x:Key="MaterialDesign">pack://application;,,,/Fonts/#Material Design Icons</FontFamily>
    
    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource SegoeUILight}"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Key="BaseTextBlockStyle">
        <Setter Property="FontFamily" Value="{StaticResource SegoeUILight}"/>
    </Style>
    
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}"/>
    
    
