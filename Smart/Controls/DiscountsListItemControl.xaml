<UserControl x:Class="Smart.DiscountsListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Smart"
             xmlns:core="clr-namespace:Smart.Core;assembly=Smart.Core"
             mc:Ignorable="d" 
             d:DesignWidth="700"
             Height="80">

    <UserControl.Resources>
        <Style x:Key="ContentStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Border x:Name="outerBorder"
                                Margin="0 2 0 3"
                                Background="{StaticResource WindowBackgroundBrush}" 
                                BorderBrush="{StaticResource DiscountsListItemNormalBrush}"
                                BorderThickness="1"
                                SnapsToDevicePixels="True">

                            

                            <!--Border for the Hover effect-->
                            <Border x:Name="outerBorderHover"
                                    Background="{StaticResource DiscountsListItemTransparentHoverBrush}"
                                    BorderBrush="{StaticResource DiscountsListItemTransparentHoverBrush}"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True"
                                    Margin="-1">

                                    <!--Border for the checked effect-->
                                <Border x:Name="outerBorderChecked"
                                            Background="Transparent" 
                                            BorderBrush="Transparent"
                                            BorderThickness="1"
                                            SnapsToDevicePixels="True"
                                            Margin="-1">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="6"/>
                                            <!--Spacing-->
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                            <!--Spacing-->
                                            <ColumnDefinition Width="10"/>
                                        </Grid.ColumnDefinitions>


                                        <!--Indicator for status-->
                                        <Border x:Name="indicator"
                                                Grid.Column="0"
                                                Margin="-1 -1 0 -1"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                Background="{StaticResource DiscountsListItemNormalBrush}"/>

                                        <!--Indicator for hover-->
                                        <Border x:Name="indicatorHover"
                                                Grid.Column="0"
                                                Margin="-1 -1 0 -1"
                                                BorderBrush="{StaticResource DiscountsListItemTransparentHoverBrush}"
                                                BorderThickness="0"
                                                Background="{StaticResource DiscountsListItemTransparentHoverBrush}"/>
                                        
                                        <!--Indicator for checked-->
                                        <Border x:Name="indicatorChecked"
                                                Grid.Column="0"
                                                Margin="-1 -1 0 -1"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                Background="Transparent"/>


                                            <!-- Content -->
                                        <Grid Grid.Column="2" >

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto" MinWidth="220"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Name -->
                                            <Grid Grid.Row="0"
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Left">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Style="{StaticResource TextIconMDCommon}"
                                                           FontSize="{StaticResource FontSizePreLarge}"
                                                           VerticalAlignment="Bottom"
                                                           Foreground="{StaticResource ForegroundDarkBlueBrush}"
                                                           Margin="0 0 5 2"
                                                           Text="{Binding DiscountType, Converter={local:DiscountTypeToIconValueConverter}}"
                                                           ToolTip="{Binding DiscountType, Converter={local:DiscountTypeToStringValueConverter}}"
                                                           />
                                                
                                                <TextBlock Grid.Column="1"
                                                       Text="{Binding DiscountName}"
                                                       Style="{StaticResource TextBlockCommon}"
                                                       TextTrimming="CharacterEllipsis"
                                                       FontSize="{StaticResource FontSizePreLarge}"
                                                       ToolTip="{Binding DiscountName}"
                                                       />
                                            </Grid>

                                            <!--Products-->
                                            <Grid Grid.Column="0"
                                                  Grid.Row="1"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Bottom"
                                                  ToolTip="{Binding ProductsNamesString}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="товары:"
                                                           Style="{StaticResource TextBlockCommon}"/>
                                                
                                                <TextBlock Grid.Column="1"
                                                    Text="{Binding ProductsNamesString}"
                                                       Style="{StaticResource TextBlockCommon}"
                                                       Foreground="{StaticResource SemiDarkBlueBrush}"
                                                       Margin="10 0 5 0"
                                                       TextTrimming="CharacterEllipsis"/>
                                                
                                            </Grid>

                                            <!--Customers-->
                                            <Grid Grid.Column="0"
                                                  Grid.Row="2"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Top"
                                                  Margin="0 -2 0 0"
                                                  ToolTip="{Binding CustomersNamesString}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="клиенты:"
                                                           Style="{StaticResource TextBlockCommon}"/>

                                                <TextBlock Grid.Column="1"
                                                    Text="{Binding CustomersNamesString}"
                                                       Style="{StaticResource TextBlockCommon}"
                                                       Foreground="{StaticResource SemiDarkBlueBrush}"
                                                       Margin="10 0 5 0"
                                                       TextTrimming="CharacterEllipsis"/>

                                            </Grid>
                                            <!--Separator-->
                                            <Rectangle Grid.Column="1"
                                                       Grid.RowSpan="3"
                                                       VerticalAlignment="Stretch"
                                                       SnapsToDevicePixels="True"
                                                       Width="1"
                                                       Margin="5 5 5 4" 
                                                       Stroke="{StaticResource SeparatorBrush}" />

                                            <!--Date-->
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Column="2"
                                                        Grid.Row="0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Bottom"
                                                        Margin="0 0 0 2">
                                                <TextBlock Text="с"
                                                           Style="{StaticResource TextBlockCommon}"
                                                           Margin="5 0 0 0"/>
                                                <TextBlock Text="{Binding StartDate, Converter={local:DateTimeToDateStringValueConverter}}"
                                                           Style="{StaticResource TextBlockCommon}"
                                                           Foreground="{StaticResource SemiDarkBlueBrush}"
                                                           Margin="10 0 10 0"/>
                                                <TextBlock Text="по"
                                                           Style="{StaticResource TextBlockCommon}"/>
                                                <TextBlock Text="{Binding EndDate, Converter={local:DateTimeToDateStringValueConverter}}"
                                                           Style="{StaticResource TextBlockCommon}"
                                                           Foreground="{StaticResource DarkRedBrush}"
                                                            Margin="10 0 5 0"/>

                                            </StackPanel>

                                            <!--Separator-->
                                            <Rectangle Grid.Column="3"
                                                       Grid.RowSpan="3"
                                                       VerticalAlignment="Stretch"
                                                       SnapsToDevicePixels="True"
                                                       Width="1"
                                                       Margin="5 5 5 4" 
                                                       Stroke="{StaticResource SeparatorBrush}" />


