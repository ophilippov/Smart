<UserControl x:Class="Smart.TabMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Smart"
             xmlns:core ="clr-namespace:Smart.Core;assembly=Smart.Core"
             mc:Ignorable="d" >

    <Grid>

        <!--TabMenu-->
        <TabControl x:Name="Tabs" Style="{StaticResource MenuTabControl}">

            <TabItem  Header="Заказы"
                      x:Name="Orders"
                      d:DataContext="{x:Static core:ManagerDesignModel.Instance}"
                      DataContext="{Binding ManagerViewModel, Source={x:Static local:ViewModelLocator.Instance}}"
                      Style="{StaticResource MenuTabItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- Quick action -->
                        <ColumnDefinition Width="Auto"/>
                        <!--Separator-->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Most used actions -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Separator -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Other actions & info -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>



                    <!-- New Order -->
                    <Button Grid.Column="0"
                        Height="80"
                        Margin="5 1 0 0"
                        Content="новый заказ"
                        Style="{StaticResource BigIconButton}"
                        Tag="{StaticResource MDCartPlusIcon}"
                        FontSize="{StaticResource FontSizeLargest}"
                        Command="{Binding NewOrderCommand}"
                                />

                    <!--Separator-->
                    <Rectangle Grid.Column="1"
                                   VerticalAlignment="Stretch"
                                   SnapsToDevicePixels="True"
                                   Width="1"
                                   Margin="5 5 5 4" 
                                   Stroke="{StaticResource SeparatorBrush}" />

                    <!-- Most used actions -->
                    <Grid Grid.Column="2" VerticalAlignment="Center" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Content="редактировать"
                                Grid.Column="0"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDPencilIcon}"
                                HorizontalAlignment="Left" 
                                Command="{Binding EditOrderCommand}"
                                />

                            <Button Content="печать"
                                Grid.Column="2"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDPrintIcon}"
                                HorizontalAlignment="Left"
                                Command="{Binding PrintOrderCommand}"
                                />

                            <Button Content="удалить"
                                Grid.Column="4"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDTrashBoxIcon}"
                                HorizontalAlignment="Right"
                                Padding="4 0 7 0"
                                Command="{Binding DeleteOrderCommand}"
                                />
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Content="информация о покупателе"
                                Grid.Column="0"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDIDIcon}"
                                HorizontalAlignment="Left"
                                Command="{Binding CustomerInfoOrderCommand}"
                                />
                            <Button Content="оплата"
                                Grid.Column="2"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource PaymentIcon}"
                                HorizontalAlignment="Right"
                                FontSize="{StaticResource FontSizeSemiLarge}"
                                FontFamily="{StaticResource FA4Regular}"
                                Padding="7 0 7 0"
                                Command="{Binding PaymentOrderCommand}"       
                                />

                        </Grid>

                        <Grid Grid.Row="2" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <Button Content="информация о заказе"
                                Grid.Column="0"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource OrderInfoListIcon}"
                                HorizontalAlignment="Left"
                                FontSize="{StaticResource FontSizeSemiLarge}"
                                FontFamily="{StaticResource FA5Solid}"
                                Padding="8 0 7 0"
                                Command="{Binding InfoOrderCommand}"
                                />

                            <Button Content="накладная"
                                Grid.Column="2"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource InvoiceIcon}"
                                HorizontalAlignment="Right"
                                FontSize="{StaticResource FontSizeSemiLarge}"
                                FontFamily="{StaticResource FA5Solid}"
                                Padding="7 0 7 0"
                                Command="{Binding InvoiceOrderCommand}"
                                />
                        </Grid>

                    </Grid>

                    <!--Separator-->
                    <Rectangle Grid.Column="3"
                                   VerticalAlignment="Stretch"
                                   Width="1" Margin="5 5 5 4" Stroke="{StaticResource SeparatorBrush}" />

                    <!-- Other actions -->
                    <Grid Grid.Column="4" VerticalAlignment="Center" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Sort and Show-->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--Sort-->
                            <StackPanel Grid.Column="0"
                                            Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockCommon}"
                                               Text="сортировать по:"
                                               Margin="5 -3 5 0"
                                             
                                               />
                                <ComboBox  SelectedIndex="{Binding SortingOrder, Converter={local:OrderSortByToIntValueConverter}}"
                                              Style="{StaticResource ComboBoxCommon}" 
                                              Height="25"
                                              Width="150"
                                              IsEditable="False"
                                              Margin="0 -4 0 0" >
                                    <ComboBoxItem  Content="номер заказа"/>
                                    <ComboBoxItem  Content="дата создания"/>
                                    <ComboBoxItem  Content="клиент"/>
                                    <ComboBoxItem  Content="сумма заказа"/>
                                    <ComboBoxItem  Content="статус оплаты"/>
                                    <ComboBoxItem  Content="статус заказа"/>
                                    <ComboBoxItem  Content="к оплате"/>


                                </ComboBox>

                                <ToggleButton Style="{StaticResource ToggleButtonDoubleIconStyle}"
                                          Content="{StaticResource SortAscIcon}"
                                          Tag="{StaticResource SortDescIcon}"
                                          FontFamily="{StaticResource FA4Regular}"
                                          FontSize="{StaticResource FontSizeSemiLarge}"
                                          Width="25"
                                          Margin="15 0 0 0"
                                          Padding="-1 0 0 0"
                                          IsChecked="{Binding SortingType, Mode=OneWay}"
                                          Command="{Binding SortOrderCommand}"
                                            />

                            </StackPanel>

                            <!-- Show -->
                            <StackPanel Grid.Column="2"
                                            Orientation="Horizontal">
                                <TextBlock Style="{StaticResource TextBlockCommon}"
                                               Text="отобразить:"
                                               Margin="0 -3 5 0" />
                                <ComboBox  SelectedIndex="{Binding ShowingOrders, Converter={local:OrderShowToIntValueConverter}}"
                                      Style="{StaticResource ComboBoxCommon}" 
                                      Height="25"
                                      Width="250"
                                      IsEditable="False"
                                      Margin="0 -4 0 0">
                                    <ComboBoxItem  Content="все заказы"/>
                                    <ComboBoxItem  Content="активные заказы"/>
                                    <ComboBoxItem  Content="новые заказы"/>
                                    <ComboBoxItem  Content="обрабатываются менеджером"/>
                                    <ComboBoxItem  Content="обрабатываются складом"/>
                                    <ComboBoxItem  Content="комплектуются"/>
                                    <ComboBoxItem  Content="отклоненные складом"/>
                                    <ComboBoxItem  Content="отгруженные со склада"/>
                                    <ComboBoxItem  Content="переданные в службу доставки"/>
                                    <ComboBoxItem  Content="доставляются"/>
                                    <ComboBoxItem  Content="доставленные"/>
                                    <ComboBoxItem  Content="выполненные"/>
                                    <ComboBoxItem  Content="отмененные"/>
                                    <ComboBoxItem  Content="закрытые"/>
                                    <ComboBoxItem  Content="ожидается оплата"/>
                                    <ComboBoxItem  Content="оплачено"/>
                                    <ComboBoxItem  Content="оплачено частично"/>
                                    <ComboBoxItem  Content="платеж просрочен"/>
                                    <ComboBoxItem  Content="возврат средств"/>
                                </ComboBox>

                            </StackPanel>

                        </Grid>

                        <!--Info-->
                        <Grid Grid.Row="1" Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <!--Info icon-->
                            <TextBlock Grid.Column="0"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Style="{StaticResource ManagerTabInfoIcon}"
                                   Margin="0 0 5 0"
                                   />

                            <TextBlock Grid.Column="1"
                                   Grid.Row="0"
                                   Text="{Binding AllOrdersCount, Converter={local:IntToStringValueConverter}}"
                                   Style="{StaticResource TextBlockCommon}"
                                   Foreground="{StaticResource BlueBrush}"
                                   FontFamily="{StaticResource SegoeUIRegular}"
                                   Margin="0 1 0 0"
                                   ToolTip="{Binding AllOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Всего заказов}"
                                   HorizontalAlignment="Center"
                                   />

                            <TextBlock Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{Binding ActiveOrdersCount, Converter={local:IntToStringValueConverter}}"
                                   Style="{StaticResource TextBlockCommon}"
                                   Foreground="{StaticResource GreenBrush}"
                                   FontFamily="{StaticResource SegoeUIRegular}"
                                   Margin="0 1 0 0"
                                   ToolTip="{Binding ActiveOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Активных заказов}"
                                  HorizontalAlignment="Center"
                                   />

                            <!--Separator-->
                            <Rectangle Grid.Column="2"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   VerticalAlignment="Stretch"
                                   Width="1" Margin="10 5 10 4" Stroke="{StaticResource SeparatorBrush}" />


                            <!--New orders-->
                            <StackPanel Grid.Row="0"
                                    Grid.Column="3"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding NewOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Новых заказов}">
                                <TextBlock Text="новых:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                <TextBlock Text="{Binding NewOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource GreenBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 0 0"/>
                            </StackPanel>

                            <!--Closed orders-->
                            <StackPanel Grid.Row="0"
                                    Grid.Column="4"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding ClosedOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Закрытых заказов}">

                                <TextBlock Text="закрытых:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                <TextBlock Text="{Binding ClosedOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource DarkGreenBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 0 0"/>
                            </StackPanel>

                            <!--Cancelled orders-->
                            <StackPanel Grid.Row="0"
                                    Grid.Column="5"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding CancelledOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Отмененных заказов}">
                                <TextBlock Text="отмененных:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                <TextBlock Text="{Binding CancelledOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource DarkRedBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 0 0"/>
                            </StackPanel>

                            <!--Rejected orders-->
                            <StackPanel Grid.Row="0"
                                    Grid.Column="6"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding RejectedOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Отклоненных заказов}">
                                <TextBlock Text="отклоненных:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                <TextBlock Text="{Binding RejectedOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource RedBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 0 0"/>
                            </StackPanel>

                            <!--Procesing orders-->
                            <StackPanel Grid.Row="1"
                                    Grid.Column="3"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding ProcessingOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Заказов в обработке}">
                                <TextBlock Text="обрабатывается:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                <TextBlock Text="{Binding ProcessingOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource BlueBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 20 0"/>
                            </StackPanel>

                            <!--Orders that is waiting for payment-->
                            <StackPanel Grid.Row="1"
                                    Grid.Column="4"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding PaymentWaitingOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Ожидающих оплату заказов}">
                                <TextBlock Text="ожидает оплату:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                <TextBlock Text="{Binding PaymentWaitingOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource DarkBlueBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 20 0"/>
                            </StackPanel>

                            <!--Payment overdue orders-->
                            <StackPanel Grid.Row="1"
                                    Grid.Column="5"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding OverdueOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Заказов с просроченным платежом}">
                                <TextBlock Text="платеж просрочен:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                <TextBlock Text="{Binding OverdueOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource RedBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 20 0"/>
                            </StackPanel>

                            <!--Deliverins orders-->
                            <StackPanel Grid.Row="1"
                                    Grid.Column="6"
                                    Orientation="Horizontal" 
                                    ToolTip="{Binding DeliveringOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Доставляется заказов}">
                                <TextBlock Text="доставляется:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                <TextBlock Text="{Binding DeliveringOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource BlueBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 0 0"/>
                            </StackPanel>


                        </Grid>


                    </Grid>


                </Grid>

            </TabItem>

            <TabItem  Header="Склад"
                      x:Name="Stock"
                      d:DataContext="{x:Static core:StockDesignModel.Instance}"
                      DataContext="{Binding StockViewModel, Source={x:Static local:ViewModelLocator.Instance}}"
                      Style="{StaticResource MenuTabItem}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--Categories-->
                        <ColumnDefinition Width="Auto"/>
                        <!--Separator-->
                        <ColumnDefinition Width="Auto"/>
                        <!--Category selector-->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Stock Orders -->
                    <Grid Grid.Column="0" 
                          Visibility="{Binding CurrentCategory, Converter={local:StockCategoryToVisibilityValueConverter}, ConverterParameter=0}">


                        <Grid.ColumnDefinitions>
                            <!-- Most used actions -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Separator -->
                            <ColumnDefinition Width="Auto"/>

                            <!-- Other actions & info -->
                            <ColumnDefinition Width="Auto"/>

                        </Grid.ColumnDefinitions>





                        <!-- Most used actions -->
                        <Grid Grid.Column="0" VerticalAlignment="Center" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="отклонить"
                                Grid.Column="0"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDCancel}"
                                HorizontalAlignment="Left" 
                                Command="{Binding RejectOrderCommand}"
                                />

                                <Button Content="подтвердить"
                                Grid.Column="2"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDCheck}"
                                HorizontalAlignment="Left" 
                                Command="{Binding ApproveOrderCommand}"
                                />

                                <Button Content="отгрузить"
                                Grid.Column="4"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDShip}"
                                HorizontalAlignment="Right"
                                Padding="5 0 7 0"
                                Command="{Binding ShipOrderCommand}"
                                />
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="информация о покупателе"
                                Grid.Column="0"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDIDIcon}"
                                HorizontalAlignment="Left"
                                Command="{Binding CustomerInfoOrderCommand}"
                                />

                                <Button Content="печать"
                                Grid.Column="2"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource MDPrintIcon}"
                                HorizontalAlignment="Right"
                                Command="{Binding PrintOrderCommand}"
                                />

                            </Grid>

                            <Grid Grid.Row="2" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>

                                </Grid.ColumnDefinitions>

                                <Button Content="информация о заказе"
                                Grid.Column="0"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource OrderInfoListIcon}"
                                HorizontalAlignment="Left"
                                FontSize="{StaticResource FontSizeSemiLarge}"
                                FontFamily="{StaticResource FA5Solid}"
                                Padding="8 0 7 0"
                                Command="{Binding InfoOrderCommand}"
                                />

                                <Button Content="накладная"
                                Grid.Column="2"
                                Style="{StaticResource SmallIconButton}"
                                Tag="{StaticResource InvoiceIcon}"
                                HorizontalAlignment="Right"
                                FontSize="{StaticResource FontSizeSemiLarge}"
                                FontFamily="{StaticResource FA5Solid}"
                                Padding="7 0 7 0"
                                Command="{Binding InvoiceOrderCommand}"
                                />
                            </Grid>

                        </Grid>

                        <!--Separator-->
                        <Rectangle Grid.Column="1"
                                   VerticalAlignment="Stretch"
                                   Width="1" Margin="5 5 5 4" Stroke="{StaticResource SeparatorBrush}" />

                        <!-- Other actions -->
                        <Grid Grid.Column="2" VerticalAlignment="Center" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--Sort and Show-->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--Sort-->
                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource TextBlockCommon}"
                                               Text="сортировать по:"
                                               Margin="5 -3 5 0"
                                             
                                               />
                                    <ComboBox SelectedIndex="{Binding SortingOrder, Converter={local:OrderSortByToIntValueConverter}}"
                                              Style="{StaticResource ComboBoxCommon}" 
                                              Height="25"
                                              Width="150"
                                              IsEditable="False"
                                              Margin="0 -4 0 0" >
                                        <ComboBoxItem  Content="номер заказа"/>
                                        <ComboBoxItem  Content="дата создания"/>
                                        <ComboBoxItem  Content="клиент"/>
                                        <ComboBoxItem  Content="сумма заказа"/>
                                        <ComboBoxItem  Content="статус оплаты"/>
                                        <ComboBoxItem  Content="статус заказа"/>


                                    </ComboBox>

                                    <ToggleButton Style="{StaticResource ToggleButtonDoubleIconStyle}"
                                          Content="{StaticResource SortAscIcon}"
                                          Tag="{StaticResource SortDescIcon}"
                                          FontFamily="{StaticResource FA4Regular}"
                                          FontSize="{StaticResource FontSizeSemiLarge}"
                                          Width="25"
                                          Margin="15 0 0 0"
                                          Padding="-1 0 0 0"
                                          IsChecked="{Binding SortingTypeOrders, Mode=OneWay}"
                                          Command="{Binding SortOrderCommand}"
                                            />

                                </StackPanel>

                                <!-- Show -->
                                <StackPanel Grid.Column="2"
                                        Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource TextBlockCommon}"
                                           Text="отобразить:"
                                           Margin="0 -3 5 0" />
                                    <ComboBox SelectedIndex="{Binding ShowingOrders, Converter={local:StockOrderShowToIntValueConverter}}"
                                      Style="{StaticResource ComboBoxCommon}" 
                                      Height="25"
                                      Width="250"
                                      IsEditable="False"
                                      Margin="0 -4 0 0">
                                        <ComboBoxItem  Content="все заказы"/>
                                        <ComboBoxItem  Content="новые заказы"/>
                                        <ComboBoxItem  Content="комплектуются"/>
                                        <ComboBoxItem  Content="отклоненные"/>
                                        <ComboBoxItem  Content="отгруженные"/>
                                        <ComboBoxItem  Content="переданные в службу доставки"/>

                                    </ComboBox>

                                </StackPanel>

                            </Grid>

                            <!--Info-->
                            <Grid Grid.Row="1" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>

                                <!--Info icon-->
                                <TextBlock Grid.Column="0"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Style="{StaticResource ManagerTabInfoIcon}"
                                   Margin="0 0 5 0"
                                   />



                                <!--New orders-->
                                <StackPanel Grid.Row="0"
                                    Grid.Column="1"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding NewOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Новых заказов}">
                                    <TextBlock Text="новых:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                    <TextBlock Text="{Binding NewOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource GreenBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 0 0"/>
                                </StackPanel>

                                <!--Shipped orders-->
                                <StackPanel Grid.Row="0"
                                    Grid.Column="2"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding ShippedOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Отгруженных}">
                                    <TextBlock Text="отгруженных:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                    <TextBlock Text="{Binding ShippedOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource DarkBlueBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 0 0"/>
                                </StackPanel>
                                <!--Rejected orders-->
                                <StackPanel Grid.Row="0"
                                    Grid.Column="3"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding RejectedOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Отклоненных заказов}">

                                    <TextBlock Text="отклоненных:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                    <TextBlock Text="{Binding RejectedOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource RedBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 0 0"/>
                                </StackPanel>

                                <!--Procesing orders (Approved)-->
                                <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Orientation="Horizontal"
                                    ToolTip="{Binding ApprovedOrdersCount, Converter={local:IntToIntStringValueConverter}, ConverterParameter=Комплектуется заказов}">
                                    <TextBlock Text="комплектуется:"
                                       Style="{StaticResource TextBlockCommon}"/>
                                    <TextBlock Text="{Binding ApprovedOrdersCount, Converter={local:IntToStringValueConverter}}"
                                       Style="{StaticResource TextBlockCommon}"
                                       Foreground="{StaticResource BlueBrush}"
                                       FontFamily="{StaticResource SegoeUIRegular}"
                                       Margin="5 1 20 0"/>
                                </StackPanel>



                                <!--Transfered to the SC orders-->
                                <StackPanel Grid.Row="1"
                                    Grid.Column="2"
                                    Orientation="Horizontal" 
